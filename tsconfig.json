{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/",
    "sourceMap": true,
    "paths": {
      "@commons/*": ["src/commons/*"],
      "@commons": ["src/commons"],
      "@containers": ["src/containers"],
      "@components": ["src/components"]
    },
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
