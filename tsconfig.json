{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/",
    "sourceMap": true,
    "paths": {
      "commons/*": ["src/app/commons/*"],
      "commons": ["src/app/commons"],
      "components": ["src/app/components"]
    },
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
